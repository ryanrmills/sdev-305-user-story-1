<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GRC PAI Report</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">
    <script src="//code.jquery.com/jquery-3.7.1.js"></script>
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>

    <link rel="stylesheet" href="./../styles/dash.css">
    <script src="./../js/summary.js" defer></script>
  </head>
  <body>
    <nav class="sidebar-nav" aria-label="GRC tools">
      <div class="nav-brand">
        <h2 class="tool-title">GRC Tools</h2>
      </div>
      <ul class="nav-list">
        <li>
          <a class="nav-link active" href="/" aria-current="page">
            <span class="nav-link__label">PAI Report Tool</span>
          </a>
          <a class="nav-link active" href="/summary" aria-current="page">
            <span class="nav-link__label">PAI Summary</span>
          </a>
        </li>
      </ul>
    </nav>
    <main>
        <table id="loc-table" class="display">
            <thead>
                <tr>
                    <th>Division</th>
                    <th>Academic Program</th>
                    <th>Division Chair</th>
                    <th>Dean</th>
                    <th>LOC Rep</th>
                    <th>PEN Contact</th>
                    <th>Payee(s)</th>
                    <th>Has Been Paid</th>
                    <th>Report Submitted</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                <% LOCData.forEach(entry => { %>

                <tr>
                    <td><%= entry.division %></td>
                    <td><%= entry.academicProgram %></td>
                    <td><%= entry.divisionChair %></td>
                    <td><%= entry.dean %></td>
                    <td><%= entry.locRep %></td>
                    <td><%= entry.penContact %></td>
                    <td><%= entry.payees %></td>
                    <td><%= entry.hasBeenPaid %></td>
                    <td><%= entry.reportSubmitted %></td>
                    <td><%= entry.notes %></td>
                </tr>

                <% }); %>

            </tbody>
        </table>
        <div id="summary-edit">
          <div class="form-card">
            
            <div class="form-card__header">
              <div class="form-card__headline">
                <h2 class="form-card__title">Edit Program</h2>
                <p id="please-select-program">Please select a program</p>
              </div>
              <div>
                <button type="submit" form="summary-edit-form" id="summary-submit" class="buttons">Submit</button>
                <button type="reset" form="summary-edit-form" id="summary-cancel" class="buttons">Cancel</button>
              </div>
            </div>

            <div id="edit-field">
              <form action="#" method="get" id="summary-edit-form"></form>
                <fieldset class="PAI-input">
                  <label for="division-summary">Division</label>
                  <input type="text" name="division-summary" id="division-summary">
                </fieldset>
                <fieldset class="PAI-input">
                  <label for="program-summary">Academic Program*</label>
                  <span id="err-program" class="error">Academic Program cannot be blank.<br></span>
                  <input type="text" name="program-summary" id="program-summary">
                </fieldset>
                <fieldset class="PAI-input">
                  <label for="payee-summary">Payee(s)</label>
                  <input type="text" name="payee-summary" id="payee-summary">
                </fieldset>
                <fieldset class="PAI-input">
                  <label for="paid-summary">Has been paid?</label>
                  <input type="text" name="paid-summary" id="paid-summary">
                </fieldset>
                <fieldset class="PAI-input">
                  <label for="report-summary">Report Submitted?</label>
                  <input type="text" name="report-summary" id="report-summary">
                </fieldset>
                <fieldset class="PAI-input">
                  <label for="notes-summary">Notes</label>
                  <input type="text" name="notes-summary" id="notes-summary">
                </fieldset>
            </div>
          </div> 
        </div>

    </main>
  </body>

  <script defer>
      let table = new DataTable('#loc-table');
  </script>
</html>
